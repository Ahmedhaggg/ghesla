<div class="d-flex">
    <div class="col-md-12 col-6">
        <div class="card" style="width: 18rem;">
            <ul class="list-group list-group-flush">
                <li class="list-group-item">
                    <div class="col">اسم الزبون</div>
                    <div class="col">{{customer.dataValues.name}}</div>
                </li>
                <li class="list-group-item">
                    <div class="col"> رقم الهاتف</div>
                    <div class="col">{{customer.dataValues.phoneNumber}}</div>
                </li>
                <li class="list-group-item">
                    <div class="col">عدد الحجوزات</div>
                    <div class="col">{{reservations.length}}</div>
                </li>
            </ul>
        </div>     
    </div>
</div>

<div class="table-responsive">
    {{#if customer.reservations.length }}
        <table class="table table-striped">
            <thead>
                <tr>
                    <th scope="col">رقم الحجز</th>
                    <th scope="col">المبلغ</th>
                    <th scope="col">التاريخ</th>
                    <th scope="col">الموقع</th>
                    {{!-- <th scope="col">موديل السيارة</th>
                    <th scope="col">لون السيارة</th> --}}
                </tr>
            </thead>
            <tbody>
                {{#each customer.reservations }}
                    <tr>
                        <td class="py-3">
                            <a href="/dashboard/reservations/{{this.dataValues.id}}" class="text-decoration-none text-primary">{{this.dataValues.id}}</a>
                        </td>
                        <td class="py-3">{{this.dataValues.amount}}</td>
                        <td class="py-3">{{#toLocalDateTime this.dataValues.date}}{{/toLocalDateTime}}</td>
                        <td class="py-3">{{this.dataValues.location}}</td>
                        {{!-- {{!-- <td class="py-3">{{this.car.dataValues.model}}</td> --}}
                        {{!-- {{!-- <td class="py-3">{{this.car.dataValues.color}}</td> --}}
                    </tr>
                {{/each}}
            </tbody>
        </table>
    {{else}}
        <p class="alert alert-info">لم يقوم الزبون باي حجوازات حتي الان</p>        
    {{/if}}
</div>
<%- include("./partials/header") %>
<div class="d-flex justify-content-between align-items-center login-page">
  <div class="container">
    <div class="row justify-content-center">
      <div class="col-sm-12 col-md-8 col-lg-6">
        <h2 class="text-center text-primary">تسجيل الدخول</h2>
        <form class="mt-4" action="/dashboard/login" method="POST" enctype="application/x-www-form-urlencoded">
          <div class="form-group my-3">
            <input type="email" class="form-control" name="email" placeholder="البريد الالكتروني">
          </div>
          <% const emailError = validationErrors.find(error => error.param === "email"); %>
          <% if (emailError) { %>
          <p class="alert alert-danger py-2"><%= emailError.msg %></p>
          <% } %>
          <div class="form-group my-3">
            <input type="password" class="form-control" name="password" placeholder="كلمة  المرور">
          </div>
          <% const passwordError = validationErrors.find(error => error.param === "password"); %>
          <% if (passwordError) { %>
          <p class="alert alert-danger py-2"><%= passwordError.msg %></p>
          <% } %>
          <div class="text-center">
            <button type="submit" class="btn btn-primary">تسجيل الدخول</button>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>
<%- include("./partials/footer") %>
